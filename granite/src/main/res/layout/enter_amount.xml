<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/colorPrimaryInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Â£9,999.00"
        style="@style/Text36"
        android:background="@drawable/yes_border"
        android:gravity="right"
        android:layout_gravity="center_horizontal"
        android:inputType="numberDecimal"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="false"
        android:layout_gravity="center"
        android:id="@+id/loKeyboardGrid"
        android:paddingTop="0dp"
        android:layout_marginBottom="10dp"
        android:columnCount="3"
        >

        <org.egility.android.views.QuickButton
            android:id="@+id/bt7"
            style="@style/NumbericKeyboardButton"
            android:text="7"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt8"
            style="@style/NumbericKeyboardButton"
            android:text="8"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt9"
            style="@style/NumbericKeyboardButton"
            android:text="9"
            />


        <org.egility.android.views.QuickButton
            android:id="@+id/bt4"
            style="@style/NumbericKeyboardButton"
            android:text="4"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt5"
            style="@style/NumbericKeyboardButton"
            android:text="5"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt6"
            style="@style/NumbericKeyboardButton"
            android:text="6"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt1"
            style="@style/NumbericKeyboardButton"
            android:text="1"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt2"
            style="@style/NumbericKeyboardButton"
            android:text="2"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt3"
            style="@style/NumbericKeyboardButton"
            android:text="3"
            />

        <org.egility.android.views.QuickButton
            android:id="@+id/bt0"
            style="@style/NumbericKeyboardButton"
            android:text="0"
            />

        <org.egility.android.views.QuickButton
            style="@style/NumbericKeyboardButtonText"
            android:id="@+id/btDot"
            android:text="."
            />

        <org.egility.android.views.QuickButton
            style="@style/NumbericKeyboardButtonText"
            android:id="@+id/btDel"
            android:text="Del"
            />
    </GridLayout>

    <org.egility.android.views.QuickButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btOK"
        android:layout_gravity="center_horizontal"
        style="@style/ButtonStandard"
        />
</LinearLayout>