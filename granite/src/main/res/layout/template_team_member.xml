<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/colorPrimaryInverse"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loMember"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Member 1:"
            android:id="@+id/tvMemberLabel"
            style="@style/Text24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not available"
            android:id="@+id/tvMemberName"
            style="@style/Text24"
            android:singleLine="false"
            />
    </LinearLayout>

    <View style="@style/LineLight"/>

</LinearLayout>