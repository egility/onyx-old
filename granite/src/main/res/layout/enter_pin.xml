<RelativeLayout
    android:id="@+id/loScreen"
    xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/colorPrimaryInverse"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/loNavigation"
        style="@style/PanelNavigation"
        >

        <org.egility.android.views.QuickButton
            android:id="@+id/btCancel"
            style="@style/ButtonNavigation"
            android:text="Cancel"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/loNavigation"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:id="@+id/tvPin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="****"
            android:textAppearance="@style/Text40"
            android:background="@drawable/yes_border"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            />

        <TextView
            android:id="@+id/tvHint"
            style="@style/Text24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text="Enter PIN"
            />

        <GridLayout
            android:id="@+id/loButtonGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            >

            <org.egility.android.views.QuickButton
                android:id="@+id/btDelAll"
                style="@style/PinButtonSmall"
                android:layout_column="0"
                android:layout_marginLeft="0dp"
                android:layout_row="0"
                android:text="Clear"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btSeven"
                style="@style/PinButtonStandard"
                android:layout_column="1"
                android:layout_row="0"
                android:text="7"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btEight"
                style="@style/PinButtonStandard"
                android:layout_column="2"
                android:layout_row="0"
                android:text="8"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btNine"
                style="@style/PinButtonStandard"
                android:layout_column="3"
                android:layout_marginRight="0dp"
                android:layout_row="0"
                android:text="9"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btFour"
                style="@style/PinButtonStandard"
                android:layout_column="1"
                android:layout_row="1"
                android:text="4"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btFive"
                style="@style/PinButtonStandard"
                android:layout_column="2"
                android:layout_row="1"
                android:text="5"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btSix"
                style="@style/PinButtonStandard"
                android:layout_column="3"
                android:layout_marginRight="0dp"
                android:layout_row="1"
                android:text="6"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btDel"
                style="@style/PinButtonSmall"
                android:layout_column="0"
                android:layout_marginLeft="0dp"
                android:layout_row="1"
                android:text="Del"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btOne"
                style="@style/PinButtonStandard"
                android:layout_column="1"
                android:layout_row="2"
                android:text="1"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btTwo"
                style="@style/PinButtonStandard"
                android:layout_column="2"
                android:layout_row="2"
                android:text="2"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btThree"
                style="@style/PinButtonStandard"
                android:layout_column="3"
                android:layout_marginRight="0dp"
                android:layout_row="2"
                android:text="3"
                />

            <org.egility.android.views.QuickButton
                android:id="@+id/btZero"
                style="@style/PinButtonStandard"
                android:layout_column="0"
                android:layout_marginLeft="0dp"
                android:layout_row="2"
                android:text="0"
                />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
