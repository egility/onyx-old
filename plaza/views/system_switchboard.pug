prepend navigation
    - crumb=""
    - title = "System Switchboard"

block content

    .max45
        if session && session.systemAdministrator
            +card("System Administration", "user-secret")
                div
                    - var url = apiRoot + "/uka/upload/transfers"
                    +uploadXml("Upload: UKA Credit Transfers", url)
                div
                    - var url = apiRoot + "/swap/upload/transfers"
                    +uploadXml("Upload: SWAP Credit Transfers", url)
                div
                    +link("Open: Payment Requests", "/payment_requests?root=true")
