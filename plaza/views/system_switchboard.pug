                    +link("Open: Accounting System", "/ledger_accounts?root=true")
                div
                    +link("Enter: Stock Movements", "/stock_movement?root=true")
                div
                    +link("List: Stock", "/stock_list?root=true")
            +card("Diagnostics", "cogs")
                div
